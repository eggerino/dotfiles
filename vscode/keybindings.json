[
    // General
    { "key": "ctrl+n ctrl+w", "command": "workbench.action.newWindow" },
    { "key": "ctrl+o ctrl+p", "command": "workbench.action.files.openFolder" },
    { "key": "ctrl+a ctrl+p", "command": "workbench.action.addRootFolder" },
    { "key": "ctrl+p", "command": "workbench.action.quickOpen" },

    // Terminal
    { "key": "ctrl+j", "command": "workbench.action.togglePanel" },

    // File tree/Sidebar
    { "key": "ctrl+h", "command": "workbench.action.toggleSidebarVisibility", "when": "!terminalFocus" },
    { "key": "ctrl+n", "command": "explorer.newFile", "when": "explorerViewletFocus" },
    { "key": "ctrl+shift+n", "command": "explorer.newFolder", "when": "explorerViewletFocus" }
]