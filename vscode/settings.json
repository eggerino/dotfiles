{
    // Disable annovances
    "breadcrumbs.enabled": false,
    "editor.codeLens": false,
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": true,

    // Startup
    "update.showReleaseNotes": false,
    "window.restoreWindows": "none",
    "workbench.startupEditor": "none",

    // Theming / Visuals
    "catppuccin.boldKeywords": false,
    "catppuccin.italicComments": false,
    "catppuccin.italicKeywords": false,
    "editor.fontFamily": "Cascadia Code",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 1,
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.iconTheme": "vscode-icons",

    // Extensions

    // C/C++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 125 }",

    // C# Dev Kit
    "dotnet.automaticallyCreateSolutionInWorkspace": false,

    // Python
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },

    // Vim
    "editor.lineNumbers": "relative",
    "explorer.compactFolders": false,
    "vim.leader": " ",
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        // Switch buffers
        { "before": ["<S-h>"], "commands": [":bprevious"] },
        { "before": ["<S-l>"], "commands": [":bnext"] },
        { "before": ["leader", "<S-h>"], "commands": ["workbench.action.moveEditorLeftInGroup"]},
        { "before": ["leader", "<S-l>"], "commands": ["workbench.action.moveEditorRightInGroup"]},

        // Splits and pane navigation
        { "before": ["leader", "s"], "commands": [":split"] },
        { "before": ["leader", "v"], "commands": [":vsplit"] },
        { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
        { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] },

        // While Editing
        { "before": ["leader", "i"], "commands": ["editor.action.formatDocument"] },

        // Find stuff
        { "before": ["leader", "s", "d"], "commands": ["editor.action.showDefinitionPreviewHover"] },
        { "before": ["leader", "g", "r"], "commands": ["editor.action.goToReferences"] },
        { "before": ["leader", "g", "d"], "commands": ["editor.action.revealDefinition"] }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Modify selection
        { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] },

        // Move selection around
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },
        { "before": [">"], "commands": ["editor.action.indentLines"] }
    ]
}