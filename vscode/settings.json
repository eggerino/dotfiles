{
    // General
    "extensions.ignoreRecommendations": true,

    // Startup
    "window.restoreWindows": "none",
    "workbench.startupEditor": "none",

    // UI
    "editor.codeLens": false,
    "editor.fontFamily": "Cascadia Code",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "vscode-icons",

    // Extensions

    // C/C++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 125 }",

    // C#
    "csharpextensions.includeNamespaces": false,
    "csharpextensions.privateMemberPrefix": "_",
    "csharpextensions.useFileScopedNamespace": true,
    "csharpextensions.useThisForCtorAssignments": false,

    // Python
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    }
}