{
    // Disable annovances
    "editor.codeLens": false,
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": true,

    // Startup
    "update.showReleaseNotes": false,
    "window.restoreWindows": "none",
    "workbench.startupEditor": "none",

    // Theming / Visuals
    "catppuccin.italicKeywords": false,
    "editor.fontFamily": "Cascadia Code",
    "window.titleBarStyle": "custom",
    "workbench.iconTheme": "catppuccin-macchiato",
    "workbench.colorTheme": "Catppuccin Macchiato",

    // Extensions

    // C/C++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 125 }",
    
    // C#
    "csharpextensions.includeNamespaces": false,
    "csharpextensions.privateMemberPrefix": "_",
    "csharpextensions.useFileScopedNamespace": true,
    "csharpextensions.useThisForCtorAssignments": false,
    
    // Python
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    }
}