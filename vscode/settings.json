{
    // Disable annovances
    "editor.codeLens": false,
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": true,

    // Startup
    "update.showReleaseNotes": false,
    "window.restoreWindows": "none",
    "workbench.startupEditor": "none",

    // Theming
    "editor.fontFamily": "Cascadia Code",
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.iconTheme": "catppuccin-frappe",

    // Extensions
    
    // C/C++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 125 }",
    
    // C#
    "csharpextensions.includeNamespaces": false,
    "csharpextensions.privateMemberPrefix": "_",
    "csharpextensions.useFileScopedNamespace": true,
    "csharpextensions.useThisForCtorAssignments": false,
    
    // Python
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },

    // VIM
    "editor.lineNumbers": "relative",
    "explorer.compactFolders": false,
    "vim.leader": " ",
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        // Switch buffers
        { "before": ["<S-h>"], "commands": [":bprevious"] },
        { "before": ["<S-l>"], "commands": [":bnext"] },
        { "before": ["leader", "<S-h>"], "commands": ["workbench.action.moveEditorLeftInGroup"]},
        { "before": ["leader", "<S-l>"], "commands": ["workbench.action.moveEditorRightInGroup"]},

        // Splits and pane navigation
        { "before": ["leader", "s"], "commands": [":split"] },
        { "before": ["leader", "v"], "commands": [":vsplit"] },
        { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
        { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] },

        // While Editing
        { "before": ["leader", "i"], "commands": ["editor.action.formatDocument"] },

        // Find stuff
        { "before": ["leader", "p"], "commands": ["editor.action.showDefinitionPreviewHover"] },
        { "before": ["g", "r"], "commands": ["editor.action.goToReferences"] },
        { "before": ["g", "d"], "commands": ["editor.action.revealDefinition"] }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Modify selection
        { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] },

        // Move selection around
        { "before": ["<S-h>"], "commands": ["editor.action.outdentLines"] },
        { "before": ["<S-l>"], "commands": ["editor.action.indentLines"] },
        { "before": ["<S-j>"], "commands": ["editor.action.moveLinesDownAction"]},
        { "before": ["<S-k>"], "commands": ["editor.action.moveLinesUpAction"]}
    ]
}