{
    "editor.codeLens": false,
    "editor.fontFamily": "Cascadia Code",
    "editor.fontSize": 16,
    "extensions.ignoreRecommendations": true,
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "vscode-icons",
    
    // C/C++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 125 }",
    
    // C#
    "csharpextensions.includeNamespaces": false,
    "csharpextensions.privateMemberPrefix": "_",
    "csharpextensions.useFileScopedNamespace": true,
    "csharpextensions.useThisForCtorAssignments": false,
    
    // Python
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    }
}