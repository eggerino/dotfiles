{
    // General
    "extensions.ignoreRecommendations": true,
    "explorer.compactFolders": false,

    // Startup
    "window.restoreWindows": "none",
    "workbench.startupEditor": "none",

    // UI
    "breadcrumbs.enabled": false,
    "editor.codeLens": false,
    "editor.fontFamily": "Cascadia Code",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0.5,
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "vscode-icons",

    // Extensions

    // C/C++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 125 }",

    // C#
    "csharpextensions.includeNamespaces": false,
    "csharpextensions.privateMemberPrefix": "_",
    "csharpextensions.useFileScopedNamespace": true,
    "csharpextensions.useThisForCtorAssignments": false,

    // Python
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },

    // VIM
    "vim.leader": " ",
    "vim.normalModeKeyBindingsNonRecursive": [
        // Switch buffers
        { "before": ["<S-h>"], "commands": [":bprevious"] },
        { "before": ["<S-l>"], "commands": [":bnext"] },
        { "before": ["leader", "<S-h>"], "commands": ["workbench.action.moveEditorLeftInGroup"]},
        { "before": ["leader", "<S-l>"], "commands": ["workbench.action.moveEditorRightInGroup"]},

        // Splits and pane navigation
        { "before": ["leader", "s"], "commands": [":split"] },
        { "before": ["leader", "v"], "commands": [":vsplit"] },
        { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
        { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] },

        // While Editing
        { "before": ["leader", "i"], "commands": ["editor.action.formatDocument"] },

        // Find stuff
        { "before": ["g", "d"], "commands": ["editor.action.showDefinitionPreviewHover"] },
        { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Stay in visual mode while indenting
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },
        { "before": [">"], "commands": ["editor.action.indentLines"] },
        // Move selected lines while staying in visual mode
        { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
        { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
        // toggle comment selection
        { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
    ]
}